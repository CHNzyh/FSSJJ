//-------- 取消出价器
function removeBidRobot(){
    $('#isbegin').html('启动');
    $('#isbegin').removeClass('stopBtn');
    $('#isbegin').addClass('startBtn');
    $("input[name='bidStatus']").attr("value", 'wait');
    $('#robotprice').removeAttr("disabled");
}
